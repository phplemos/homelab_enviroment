{
    # Habilita certificados auto-assinados para domínios locais
    local_certs
}

# Página inicial - HTTP simples
http://{$CADDY_DOMAIN:localhost} {
    respond "Bem-vindo ao Homelab!" 200
}

# AdGuard - HTTP (não precisa HTTPS)
http://adguard.{$CADDY_DOMAIN:localhost} {
    reverse_proxy http://{$SERVERIP}:8081
}

# n8n - HTTPS obrigatório
https://n8n.{$CADDY_DOMAIN:localhost} {
    reverse_proxy n8n:5678
}