}

# n8n (Internal Bridge - Can use container name)
http://n8n.{$CADDY_DOMAIN:localhost} {
    reverse_proxy https://n8n:5678
}

# Home Assistant (Macvlan - Must use Static IP)
http://ha.{$CADDY_DOMAIN:localhost} {
    reverse_proxy 192.168.1.201:8123
}

# Pi-hole (Macvlan - Must use Static IP)
http://pihole.{$CADDY_DOMAIN:localhost} {
    reverse_proxy {PIHOLE_SERVERIP}:80
}